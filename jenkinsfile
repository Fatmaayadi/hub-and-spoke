pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/Fatmaayadi/hub-and-spoke.git', branch: 'main'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('config_test2') {
                    script {
                        docker.image('hashicorp/terraform:1.2.9').inside {
                            sh 'terraform init'
                        }
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('config_test2') {
                    script {
                        docker.image('hashicorp/terraform:1.2.9').inside {
                            sh 'terraform plan -out=tfplan'
                        }
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('config_test2') {
                    input message: 'Approve Terraform Apply?', ok: 'Apply'
                    script {
                        docker.image('hashicorp/terraform:1.2.9').inside {
                            sh 'terraform apply tfplan'
                        }
                    }
                }
            }
        }
    }
}
