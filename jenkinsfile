pipeline {
    agent { label 'oci-agent' }

    stages {
        stage('Setup OCI Config') {
            steps {
                withCredentials([
                    file(credentialsId: 'oci-config', variable: 'OCI_CONFIG'),
                    file(credentialsId: 'oci-key', variable: 'OCI_KEY')
                ]) {
                    bat """
                        if not exist "%USERPROFILE%\\.oci" mkdir "%USERPROFILE%\\.oci"
                        copy "%OCI_CONFIG%" "%USERPROFILE%\\.oci\\config"
                        copy "%OCI_KEY%" "%USERPROFILE%\\.oci\\oci_api_key.pem"
                        powershell -Command "icacls '%USERPROFILE%\\.oci\\oci_api_key.pem' /inheritance:r /grant:r '%USERNAME%:F'"
                    """
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                dir('config_test2') {
                    bat """
                        terraform init
                        terraform plan -out=tfplan
                        terraform apply -auto-approve
                    """
                }
            }
        }
    }
}
