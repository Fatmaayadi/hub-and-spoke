pipeline {
    agent {
        docker {
            image 'hashicorp/terraform:1.2.9'
            args '-v $HOME/.aws:/root/.aws' // if you need AWS credentials mounted
        }
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Fatmaayadi/hub-and-spoke.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('config_test2') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('config_test2') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('config_test2') {
                    input message: 'Approve Terraform Apply?', ok: 'Apply'
                    sh 'terraform apply tfplan'
                }
            }
        }
    }
}
