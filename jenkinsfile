stage('Terraform Init') {
    steps {
        dir('config_test2') {
            sh 'terraform init'
        }
    }
}

stage('Terraform Plan') {
    steps {
        dir('config_test2') {
            sh 'terraform plan -out=tfplan'
        }
    }
}

stage('Terraform Apply') {
    steps {
        dir('config_test2') {
            input message: 'Approve Terraform Apply?', ok: 'Apply'
            sh 'terraform apply tfplan'
        }
    }
}
